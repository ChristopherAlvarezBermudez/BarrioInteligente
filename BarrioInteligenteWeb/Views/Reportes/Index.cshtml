@model IEnumerable<BarrioInteligenteWeb.Models.Reporte>

@{
    ViewData["Title"] = "Reportes Ciudadanos";
}

<div class="container mt-4">
    <h2>Reportes Ciudadanos - Barrio Inteligente</h2>
    
    <p>
        <a asp-action="Crear" class="btn btn-primary">Reportar Nuevo Problema</a>
    </p>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Título</th>
                <th>Categoría</th>
                <th>Ubicación</th>
                <th>Fecha</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Titulo</td>
                    <td>@item.Categoria</td>
                    <td>@item.Ubicacion</td>
                    <td>@item.Fecha.ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
</div>