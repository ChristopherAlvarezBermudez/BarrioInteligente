@model BarrioInteligenteWeb.Models.Reporte

@{
    ViewData["Title"] = "Nuevo Reporte";
}

<div class="container mt-4">
    <h2>Crear Nuevo Reporte</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Crear">
                <div class="form-group mb-3">
                    <label class="control-label">Título del Problema</label>
                    <input asp-for="Titulo" class="form-control" placeholder="Ej: Semáforo dañado" required />
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Descripción Detallada</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Categoría</label>
                    <select asp-for="Categoria" class="form-control">
                        <option value="Vialidad">Vialidad (Baches, Calles)</option>
                        <option value="Alumbrado">Alumbrado Público</option>
                        <option value="Basura">Recogida de Basura</option>
                        <option value="Seguridad">Seguridad</option>
                        <option value="Agua">Agua / Drenaje</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Ubicación</label>
                    <input asp-for="Ubicacion" class="form-control" placeholder="Ej: Av. 27 de Febrero esq. Lincoln" required />
                </div>

                <div class="form-group">
                    <input type="submit" value="Enviar Reporte" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>